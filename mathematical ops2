#include<stdio.h>
int main()
{
    int x,y,squarelength,coordinatex,coordinatey;
    printf("Enter the x-coordinate of the left bottom vertex\n");
    scanf("%d",&x);
    printf("Enter the y-coordinate of the left bottom vertex\n");
    scanf("%d",&y);
    printf("Enter the length of a side\n");
    scanf("%d",&squarelength);
    coordinatex=x+(squarelength/2);
    coordinatey=y+(squarelength/2);
    printf("The centre of the ground is at (%d,%d)",coordinatex,coordinatey);
    return 0;
}
